CREATE TABLE BOARD(
	IDX INT AUTO_INCREMENT,
	TITLE VARCHAR(255) NOT NULL,
	CONTENT VARCHAR(2000) NOT NULL,
	WRITER VARCHAR(50) NOT NULL,
	INDATE DATETIME DEFAULT NOW(),
	COUNT INT DEFAULT 0,
	PRIMARY KEY(IDX)
);

-- IMG (이미지 -> 숫자들의 모음(byte[])->직렬화(길게뽑겠다) -> 문자열 형식) => Base64(인코딩)
ALTER TABLE BOARD ADD COLUMN IMG LONGTEXT NOT NULL;

SELECT * FROM BOARD;

INSERT INTO BOARD(TITLE, CONTENT, WRITER)
VALUES('10월 1일은 국군의 날 임시휴무', '너무 어려워', '김도아');

INSERT INTO BOARD(TITLE, CONTENT, WRITER)
VALUES('저는 배드민턴을 좋아합니다', '내가 제일 잘해', '신범식');

INSERT INTO BOARD(TITLE, CONTENT, WRITER)
VALUES('필승! 국가전략기동부대 해병대', '히히히히', '박주형');

COMMIT;
SELECT * FROM BOARD;